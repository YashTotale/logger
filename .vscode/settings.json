{
  "files.associations": {
    ".gitignore": "ignore",

    ".env": "text",
    ".env.example": "text",

    ".markdownlintignore": "ignore",
    ".markdownlintrc": "json",

    ".prettierignore": "ignore",
    ".prettierc": "json",

    ".eslintignore": "ignore",
    ".eslintrc": "json",

    ".huskyrc": "json",
    ".lintstagedrc": "json",

    ".snyk": "yaml",
    ".imgbotconfig": "json",
    ".all-contributorsrc": "json"
  },
  "markdown.extension.toc.omittedFromToc": {
    "README.md": ["## Table of Contents"]
  },
  // Install the 'Terminal All In One' extension to use the scripts below
  "terminalAllInOne.script.disableDescription": true,
  "terminalAllInOne.scripts": [
    {
      "name": "Start",
      "script": "npm run start" // Run with Cmd+i and then press 0
    },
    {
      "name": "Test",
      "script": "npm run test" // Run with Cmd+i and then press 1
    },
    {
      "name": "Lint",
      "script": "npm run lint" // Run with Cmd+i and then press 2
    },
    {
      "name": "Build",
      "script": "npm run build" // Run with Cmd+i and then press 3
    },
    {
      "name": "Recreate Releases",
      "script": "npm run recreate-releases" // Run with Cmd+i and then press 4
    },
    {
      "name": "Create Doc",
      "script": "npm run create-doc" // Run with Cmd+i and then press 5
    }
  ]
}
